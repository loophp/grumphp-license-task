{
    "name": "loophp/grumphp-license-task",
    "type": "library",
    "description": "Provide the license task for GrumPHP.",
    "keywords": [
        "grumphp-task",
        "license"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com",
            "homepage": "https://not-a-number.io",
            "role": "author"
        }
    ],
    "require": {
        "php": ">= 7.4",
        "composer/spdx-licenses": "^1.5.5",
        "ergebnis/license": "^1.1"
    },
    "require-dev": {
        "drupol/php-conventions": "3.0.*",
        "phpro/grumphp": "^1.3"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "loophp\\GrumphpLicenseTask\\": "./src/"
        }
    },
    "scripts": {
        "changelog-unreleased": "docker-compose run auto_changelog -c .auto-changelog -u",
        "changelog-version": "docker-compose run auto_changelog -c .auto-changelog -v"
    },
    "support": {
        "issues": "https://github.com/loophp/grumphp-license-task/issues",
        "source": "https://github.com/loophp/grumphp-license-task",
        "docs": "https://github.com/loophp/grumphp-license-task"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/drupol"
        },
        {
            "type": "paypal",
            "url": "https://www.paypal.me/drupol"
        }
    ]
}
